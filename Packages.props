	  <PackageReference Update="ServantSoftware.Data.Json" Version="$(SSDataVersion)" />
	  <PackageReference Update="ServantSoftware.Data.Csv" Version="$(SSDataVersion)" />
	  <PackageReference Update="ServantSoftware.Data.Xml" Version="$(SSDataVersion)" />
  </ItemGroup>
	
  <ItemGroup>
	<PackageReference Update="Microsoft.EntityFrameworkCore.Relational" Version="$(EFCoreVersion)" />


	<!-- Unit Tests -->
	<PackageReference Update="Moq" Version="4.16.1" />
	<PackageReference Update="Microsoft.NET.Test.Sdk" Version="16.11.0" />
	<PackageReference Update="xunit" Version="2.4.1" />
	<PackageReference Update="xunit.runner.visualstudio" Version="2.4.3" />
	<PackageReference Update="coverlet.collector" Version="3.0.2" />
	<PackageReference Update="coverlet.msbuild" Version="3.0.2" />
	<PackageReference Update="FluentAssertions" Version="6.0.0" />
	<PackageReference Update="XunitXml.TestLogger" Version="3.0.70" />
    <PackageReference Update="Microsoft.EntityFrameworkCore" Version="$(EFCoreVersion)" />

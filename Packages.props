	  <SSDataVersion>1.0.0.151</SSDataVersion>
	  <EFCoreVersion>6.0.10</EFCoreVersion>
  </PropertyGroup>
	
  <!-- ServantSoftware.Data ADO.NET provider NuGet packages to only be included in RELEASE mode. -->
  <ItemGroup Condition="'$(Configuration)'=='Release'">
